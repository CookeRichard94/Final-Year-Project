{% extends "store/extensions/base.html.jinja2" %}
{% load static %}
{% block title %}Edit {{ request.user.username }}{% endblock %}
{% block content %}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="{% static 'css/editprofile.css' %}" type="text/css" />
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<a href="{% url 'view_user' %}" class="back">ðŸ¢€Back</a>
<div class="forms">
    <h1>Edit {{ request.user.username }}'s details</h1>
    <form method="POST" action={% url "view_user" %}>{% csrf_token %}
        <div class="form-group">
            <label for="username" class="username">Username</label>
            <br>
            <input type="text" id="username" name="username" value="{{ request.user.username }}">
        </div>
        <div class="form-group">
            <label for="first_name" class="firstname">First name</label>
            <br>
            <input type="text" id="first_name" name="first_name" value="{{ request.user.first_name }}">
        </div>
        <div class="form-group">
            <label for="last_name" class="lastname">Last name</label>
            <br>
            <input type="text" id="last_name" name="last_name" value="{{ request.user.last_name }}">
        </div>
        <div class="form-group">
            <label for="email" class="email">Email</label>
            <br>
            <input type="text" id="email" name="email" value="{{ request.user.email }}">
        </div>
        <input class="submit" type="submit" value="Confirm changes">
    </form>
</div>
</body>
</html>
{% endblock %}