{% extends "store/extensions/base.html.jinja2" %}
{% load static %}
{% block title %}Add product{% endblock %}
{% block content %}
<!DOCTYPE html>
<html lang="en">
    <head>
       <link rel="stylesheet" href="{% static 'css/add-product.css' %}" type="text/css" />
        <meta charset="UTF-8">
    </head>
    <body>
    <div>
        <div>
             <a href="{% url 'list' %}" class="back">ðŸ¢€Back</a>
        </div>
        <div>
            <h1>Add product</h1>
        </div>
    </div>

    <form class="product" method="POST">{% csrf_token %}
        <div class="form-group">
            <label for="name">Name</label>
            <br>
            <input type="text" class="name" name="name" placeholder="Product Name...">
        </div>
        <hr>
        <div class="form-group">
            <label for="price">Price â‚¬</label>
            <br>
            <input type="number" class="price" name="price" placeholder="Product Price...">
        </div>
        <hr>
        <div class="form-group">
            <label for="select_size">Size</label>
            <br>
            <select id="select_size">
                <option value="S">Small</option>
                <option value="M">Medium</option>
                <option value="L">Large</option>
            </select>
        </div>
        <hr>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <br>
            <input type="number" class="quantity" name="quantity" placeholder="Quantity...">
        </div>
        <input type="hidden" name="size" class="size" value="">
        <input class="submit" type="submit" value="Add product">

        <script>
            $(function () {
                $("#select_size").change(function () {
                    var e = document.getElementById("select_size");
                    {#console.log(e.options[e.selectedIndex].value);#}
                    document.getElementById("size").setAttribute("value", e.options[e.selectedIndex].value);
                });
            });
        </script>
    </form>
    </body>
</html>
{% endblock %}